<%= render partial: "partials/panel" %>


<div class="col-xs-9">
<table class="table table-bordered">

  <tr>
    <td> Name            </td>
    <td> Number of cards </td>
  </tr>

  <% @decks.each do |deck| %>
    <tr>
      <td> <%= deck.name %>        </td>
      <td> <%= deck.cards.count %> </td>
      <td>
        <% unless deck.id == current_user.current_deck_id %>
          <a href= <%= user_path(current_user.id, { user: { current_deck_id: deck.id }}) %> data-method="patch" class="btn btn-success" role="button"> Сделать текущей </a>
        <% end %>
      </td>
      <td> <a href= <%= deck_path(deck) %>                                  data-method="delete" class="btn btn-danger" role="button"> Удалить колоду  </a></td>
    </tr>
  <% end %>

</table>

<a href= <%= new_deck_path %> class="btn btn-default" role="button"> Создать колоду </a>
</div>
