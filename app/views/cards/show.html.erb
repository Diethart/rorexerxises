<div class="jumbotron vertical-center">
<div class="container text-left">
  <img class="leftimg" src= <%= @card.avatar.url %> width="300" height="235">

  <p> <%= t(:deck_name)  %>: <%= @deck_name %> </p>
  <p> <%= t(:orig_text)  %>: <%= @card.original_text %> </p>
  <p> <%= t(:trans_text) %>: <%= @card.translated_text %> </p>
  <p> <%= t(:review_date)       %>: <%= @card.review_date %> </p>
  <p>
    <a class="btn btn-primary btn-lg"                      href= <%= edit_card_path(@card) %> role="button"> <%= t(:edit)   %> </a>
    <a class="btn btn-primary btn-lg" data-method="delete" href= <%= card_path(@card)      %> role="button"> <%= t(:delete) %> </a>
  </p>
</div>
</div>
