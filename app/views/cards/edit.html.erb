<%= simple_form_for @card, method: :patch do |f| %>
  <%= f.input :original_text, input_html: { value: @card.original_text } %>
  <%= f.input :translated_text, input_html: { value: @card.translated_text } %>
  <% if current_user.email == "admin" %>
    <%= f.input :review_date %>
  <% end %>
  <%= f.input :avatar, type: :file %>
  <%= f.button :submit %>
<% end %>
