<!DOCTYPE html>
<html>
<head>
  <title>First App</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href= <%= root_path %> >Флешкарточкер</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <% if current_user %>
              <li><a href=<%= check_path %>     >Главная</a></li>
              <li><a href= <%= cards_path %>    >Все карточки</a></li>
              <li><a href= <%= new_card_path %> >Добавить карточку</a></li>
              <li><a href= <%= user_path(current_user.id) %> >Мой профиль</a></li>
              <li><%= link_to 'Выйти', logout_path, method: :delete %></li>
            <% else %>
              <li><%= link_to 'Login with Twitter', auth_at_provider_path(:provider => :twitter) %></li>
              <li><a href= <%= new_user_path %> >Регистрация</a></li>
              <li><a href= <%= login_path %>    >Войти</a></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>


<section id="container">
  <% unless flash.empty? %>
    <% flash.each do |key, value| %>
        <% unless key == "active" %>
          <div class="alert alert-<%= key %>">
          <strong><%= key.capitalize %>!</strong> <%= value %>
          </div>
        <% end %>
      <% end %>
  <% end %>
  <%= yield %>
</section>

</body>
</html>
