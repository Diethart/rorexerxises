<table class="table table-bordered">
  <tr>
    <td> E-mail </td>
    <td> Group    </td>
  </tr>

  <% @users.each do |usr| %>
    <tr>
      <td> <%= usr.email           %> </td>
      <td> <%= usr.roles.first.name%> </td>
      <td> <a href= <%= user_path(usr) %> data-method="delete" class="btn btn-danger" role="button"> <%= t(:user_delete) %> </a></td>
    </tr>
  <% end %>
</table>
